<Window
    x:Class="LVS.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LVS"
    Title="Numerical Methods Solver" Width="500" Height="450">

    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="Equation (in terms of x):"/>
        <TextBox x:Name="EquationInput" PlaceholderText="e.g., x^2 - x - 1"/>

        <TextBlock Text="Initial Guess (x0):"/>
        <TextBox x:Name="X0Input" PlaceholderText="e.g., 1"/>

        <TextBlock Text="Second Guess (x1) [optional]:"/>
        <TextBox x:Name="X1Input" PlaceholderText="e.g., 2"/>

        <TextBlock Text="Select Method:"/>
        <ComboBox x:Name="MethodSelector">
            <ComboBoxItem Content="Newton-Raphson"/>
            <ComboBoxItem Content="Bisection"/>
            <ComboBoxItem Content="Secant"/>
        </ComboBox>

        <Button Content="Solve" Click="Solve_Click" Margin="0,10"/>
        <TextBlock x:Name="ResultText" TextWrapping="Wrap" FontSize="14"/>
    </StackPanel>
</Window>
